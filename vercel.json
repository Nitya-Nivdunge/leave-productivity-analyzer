{
    "builds": [
      {
        "src": "frontend/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "build"
        }
      },
      {
        "src": "api/**/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/api"
      },
      {
        "src": "/(.*)",
        "dest": "/frontend"
      }
    ],
    "buildCommand": "cd frontend && npm run build",
    "outputDirectory": "frontend/build"
  }